    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Makegrey",
            "program": "${workspaceRoot}/src/makegray.js",
            "outFiles": [ "${workspaceRoot}/compiled/**/*.js" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Split Data",
            "program": "${workspaceRoot}/src/splitdata.js",
            "outFiles": [ "${workspaceRoot}/compiled/**/*.js" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Initial Train",
            "program": "${workspaceRoot}/src/train.js",
            "outFiles": [ "${workspaceRoot}/compiled/**/*.js" ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Continue Training",
            "program": "${workspaceRoot}/src/train.js",
            "args": [
                "--model=/tmp/graycolor-model/"
            ],
            "outFiles": [ "${workspaceRoot}/compiled/**/*.js" ]
        }
        {
            "type": "node",
            "request": "launch",
            "name": "Test",
            "program": "${workspaceRoot}/src/test.js",
            "args": [
                "--model=/tmp/graycolor-model/"
            ],
            "outFiles": [ "${workspaceRoot}/compiled/**/*.js" ]
        }
    ]
}